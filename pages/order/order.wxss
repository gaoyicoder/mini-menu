page{background:#f0f0f0;font-family: "微软雅黑",Helvetica, Arial, "Hiragino Sans GB", "Source Han Sans CN", "PingFang SC", Roboto,  "Heiti SC", "Microsoft Yahei", sans-serif;background:#fff;}
.swiper-tab{ margin-top:10px;height:20px;padding:10px 0;background:#fff;display:flex;font-size:17px;line-height:20px;border-bottom:1px solid #e6e6e6;}
.swiper-tab-list{flex:1;text-align:center;position:relative;color:#787878;}
.swiper-tab-list:first-of-type{border-right:1px solid #c8c8c8;}
.swiper-tab-list.on{color:#000;}
.swiper-tab-list.on::after{ content:"";height:2px;width:100px;background:#000;position:absolute;left:50%;margin-left:-50px;bottom:-10px;}
.book-box,.order-box{width:100%;position:relative;box-sizing:border-box;}
.swiper-vertical-box{width:100%;padding-left:100px;box-sizing:border-box;}
.order-box{background:#fff;}
.swiper-vertical-tab{width:90px;position:absolute;left:0px;top:0;min-height:100%;}
.swiper-vertical-tab view{height:50px;font-size:17px;color:#505050;text-align:center;box-sizing:border-box;padding-top:15px;}
.swiper-vertical-tab{background:#f5f5f5;}
.swiper-vertical-tab view.on{background:#fff;}
.swiper-vertical-box .vertical-list .title{height:40px;padding-left:20px;background:#fff;color:#646464;line-height:40px;font-size:16px;display:block;border-bottom:1px solid #E5E5E5;}
.type-detail{background:#fff;padding-bottom:10px;}
.type-detail>view{border-top:0px solid #E5E5E5;border-bottom:0px solid #E5E5E5;margin-left:10px;overflow:hidden;padding-left:80px;box-sizing:border-box;position:relative;height:92px;width:100%;margin-bottom:-1px;}
.type-detail view image{width:70px;height:70px;border-radius:6px;margin-top:10px;border:1px solid #ccc;float:left;margin-bottom:10px;position:absolute;left:0;top:0;}
.book-detail{float:left;width:100%;}
.book-detail>text{font-size:17px;color:#000;margin-top:12px;display:block;}
.book-detail button,.book-result-detail button{float:left;width:20px;height:20px; margin-top:3px; padding-left: 0px; padding-right: 0px;}
.book-detail>view text{float:left;}
.book-detail>view view{float:left;}
.book-detail>view{margin-top:5px;width:100%;overflow:hidden;position:relative;height:28px;}
.book-detail button.reduce,.book-result-detail button.reduce{background:url(https://api.gaoyicoder.com/images/menu/reduce_order.png) no-repeat;background-size:20px 20px; border-radius:20px;}
.book-detail button.add,.book-result-detail button.add{background:url(https://api.gaoyicoder.com/images/menu/add_order.png) no-repeat;background-size:100% 100%; border-radius:20px;}
.book-detail .money{font-size:17px;color:#000;line-height:27px;}
.book-detail .money .money-symbol{font-size:13px;}
.book-detail .sale-number{font-size:12px;color:#646464;height:15px;margin-top:3px;}
.book-detail .money-row{margin-top: 3px;}
.book-detail .operations{position:absolute;right:20px;top:0;}
.operations text{line-height:27px;color:#333;width:35px;display:block;text-align:center;}
.Bill-layer{width: 100%;height:100%;background:#000;opacity:0.5;position:fixed;left:0;top:0;z-index:1;}
.Bill{position:fixed;left:0;bottom:0;width:100%;z-index:2;}
.takeBill{height:50px;background:#fff;position:relative;}
.takeBill .box-right{width:120px;height:52px;background:#000;position:absolute;right:0;top:-1px;border-radius:0;color:#fff;line-height:52px;text-align:center;}
.box-left{margin-left:30px;}
.box-left>view{float:left;}
.box-left .tips{width:30px;position:relative;background:url(https://api.gaoyicoder.com/images/menu/cart.png) no-repeat left 12px;background-size:100% auto;height:40px;}
.box-left .tips view{position:absolute;right:-5px;top:7px;width:20px;height:20px;background:#000;color:#fff;border-radius:10px;text-align:center;line-height:20px;font-size:12px;}
.box-left .moeny{color:#000;font-size:17px;margin-left:10px;margin-top:15px;}
.clearCart{height:35px;text-align:right;background:#f5f5f5;}
.clearCart button{background:none;float:right;color:#646464;line-height:35px;font-size:14px;padding-left:16px;background:url(https://api.gaoyicoder.com/images/menu/delete.png) no-repeat left center;background-size:13px auto;}
.clearCart button::after{border:0 none;}
.book-result-detail{overflow:hidden;}
.book-result-detail>view{background:#fff;overflow:hidden;height:50px;padding-top:10px;padding-left:15px;box-sizing: border-box;padding-right:10px;border-bottom:1px solid #e6e6e6;}
.book-result-detail>view text{float:left;}
.book-result-detail>view view{float:right;}
.food-detail{overflow:hidden;}
.food-detail>text{float:left;color:#3c3c3c;font-size:14px;display:block;}
.food-detail>view{float:right;}
.food-detail>view text{font-size:14px;color:#999;}
.place{height:5px;width:100%;background:#F0F0F0;}
.order-list{border-top:1px solid #E6E6E6;border-bottom:1px solid #E6E6E6;margin-top:-1px;padding:10px 15px;}
.order-list>text{color:#3c3c3c;font-size:14px;margin-bottom:6px;display:block;}
.order-list .time{color:#999;font-size:13px;text-align:right;}
.bdt{border-top:1px solid #e6e6e6;}
.hidden{display:none}
.show{display:block}

.page-body-info {
  height: 70px;
  margin-top: 10px;
}
.page-body-info .user-info-view {
  width: 50%;
  float: left;
}
.page-body-info .user-info-view .user-avata{
    width:60px;
    height: 60px;
    border-radius: 50%;
    display:flex;
    overflow: hidden;
}
.page-body-info .user-info-view .user-avata-view{
  float: left;
  margin: 0 10px 0 10px;
}
.page-body-info .user-info-view .user-nickname-view{
  padding-top: 10px;
  float: left;
  font-size: 15px;
  color: #000;
  width: 50%;
  overflow: hidden;
}
.user-nickname-view .user-is-member {
  font-size: 12px;
  color: #646464;
}
.page-body-info .user-member-view{
  float: left;
  width: 50%;
  height: 100%;
}
.page-body-info .user-member-view .text{
  position: relative;
  margin-top: 25rpx;
  float: right;
  height: 40px;
}

.page-body-info .user-member-view .text view{
  height: 20px;
  line-height: 20px;
  font-size: 14px;
}
.page-body-info .user-member-view .text view.money{
  height: 20px;
  line-height: 20px;
  font-size: 12px;
  color: #646464;
}
.page-body-info .user-member-view .text image{
  width: 20px;
  height: 14px;
  margin-right: 2px;
}
.arrow{
  margin-right: 10px;
  float:right;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  transform: rotate(45deg);
}
.page-body-info .user-member-view .arrow{
  margin-top: 55rpx;
  width: 8px;
  height: 8px;
}

.member-space {
  height: 20rpx;
  background:#f0f0f0;
}
.member-center-list{
  padding:0px 5px 0 15px;
  font-size: 15px;
}
.member-center-list .list-item{
  padding: 10px 0 5px 0;
  border-bottom: 1px solid #e6e6e6;
}
.member-center-list .arrow{
  margin-top: 35rpx;
  width: 8px;
  height: 8px;
}
.today-order-list {
  padding:5px 15px;
  font-size: 15px;
}
.today-order-none {
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  text-align: center;
}

.book-detail .menu-sold-out{
  height: 18px; width: 45px; background: #000;color: #FFF;
  line-height: 18px; font-size: 14px;text-align: center;
  border-radius:0 6px 0 6px;
  position: absolute;
  top: -2px;
  right: 10px;
}